<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/paleta1"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/button4"
        android:layout_width="138dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="64dp"
        android:background="@color/paleta4"
        android:backgroundTint="@color/paleta4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:srcCompat="@drawable/baseline_sick_24" />

    <ImageView
        android:id="@+id/button1"
        android:layout_width="138dp"
        android:layout_height="112dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="44dp"
        android:background="@color/paleta4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_yard_24" />

    <ImageView
        android:id="@+id/button2"
        android:layout_width="138dp"
        android:layout_height="112dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="64dp"
        android:background="@color/paleta4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_woman_24" />

    <ImageView
        android:id="@+id/button3"
        android:layout_width="138dp"
        android:layout_height="112dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="60dp"
        android:background="@color/paleta4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:srcCompat="@drawable/baseline_theater_comedy_24" />

    <Button
        android:id="@+id/buttonExit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/paleta5"
        android:hint="@string/exit"
        android:text="@string/exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/button4"
        app:layout_constraintHorizontal_bias="0.547"
        app:layout_constraintStart_toStartOf="@+id/button3" />

</androidx.constraintlayout.widget.ConstraintLayout>